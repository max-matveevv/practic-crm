# Production Environment Configuration
# Copy this to .env on your production server

# App Configuration
APP_NAME="CRM System"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://crm.practic.studio

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/path/to/your/database.sqlite

# Session Configuration for HTTPS
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=false
SESSION_HTTP_ONLY=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=true
SESSION_DOMAIN=.practic.studio

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=crm.practic.studio

# Cache Configuration
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Mail Configuration (if needed)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Telescope (disable in production)
TELESCOPE_ENABLED=false
